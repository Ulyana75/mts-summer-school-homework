<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/movie_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:src="@drawable/img_human_anger"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        app:layout_constraintTop_toTopOf="parent"/>

    <View
        android:id="@+id/card_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/movie_image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="200dp"
        android:background="@drawable/card_shape"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/card_background"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_on_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:translationZ="10dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                tools:listitem="@layout/item_genre"/>

            <TextView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_human_anger"
                android:textSize="@dimen/text_size_date"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/recycler_view_genre"
                app:layout_constraintTop_toBottomOf="@+id/recycler_view_genre"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/movie_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/title_human_anger"
                android:textSize="@dimen/text_title_size"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/date"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/age_restriction"
                android:layout_marginStart="22dp"
                android:layout_marginTop="14dp"/>

            <TextView
                android:id="@+id/age_restriction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/age_18_plus"
                android:textSize="@dimen/text_age_restriction_size"
                android:textColor="@color/black"
                android:background="@drawable/border_circle"
                app:layout_constraintTop_toTopOf="@+id/date"
                app:layout_constraintBottom_toBottomOf="@+id/movie_title"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="20dp"
                android:gravity="center"/>

            <ImageView
                android:id="@+id/star_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_full_star"
                app:layout_constraintStart_toStartOf="@+id/movie_title"
                app:layout_constraintTop_toBottomOf="@+id/movie_title"
                android:layout_marginTop="@dimen/app_margin_small"/>

            <ImageView
                android:id="@+id/star_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_full_star"
                app:layout_constraintTop_toTopOf="@+id/star_first"
                app:layout_constraintStart_toEndOf="@+id/star_first"/>

            <ImageView
                android:id="@+id/star_third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_full_star"
                app:layout_constraintTop_toTopOf="@+id/star_first"
                app:layout_constraintStart_toEndOf="@+id/star_second"/>

            <ImageView
                android:id="@+id/star_fourth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_full_star"
                app:layout_constraintTop_toTopOf="@+id/star_first"
                app:layout_constraintStart_toEndOf="@+id/star_third"/>

            <ImageView
                android:id="@+id/star_fifth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_empty_star"
                app:layout_constraintTop_toTopOf="@+id/star_first"
                app:layout_constraintStart_toEndOf="@+id/star_fourth"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/description_human_anger"
                android:textSize="@dimen/text_description_size"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/star_first"
                app:layout_constraintStart_toStartOf="@id/movie_title"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="@dimen/app_margin_small"/>

            <TextView
                android:id="@+id/actors_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/actors"
                android:textSize="@dimen/text_actors_size"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/description"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="22dp"
                android:layout_marginTop="35dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_actors"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/actors_title"
                android:layout_marginStart="20dp"
                android:layout_marginTop="@dimen/app_margin_normal"
                android:paddingBottom="46dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_actor"/>

            <ProgressBar
                android:id="@id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/recycler_view_actors"
                app:layout_constraintStart_toStartOf="@id/recycler_view_actors"
                app:layout_constraintEnd_toEndOf="@id/recycler_view_actors"
                android:visibility="gone"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>