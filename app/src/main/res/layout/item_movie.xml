<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movie_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/film_poster"
        android:layout_width="150dp"
        android:layout_height="216dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        tools:src="@drawable/img_actor_stethem"
        android:scaleType="centerCrop"
        android:background="@drawable/card_background"/>

    <TextView
        android:id="@+id/film_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/film_poster"
        app:layout_constraintStart_toStartOf="@+id/film_poster"
        app:layout_constraintEnd_toEndOf="@+id/film_poster"
        android:layout_marginTop="@dimen/app_margin_small"
        android:layout_marginStart="3dp"
        tools:text="Гнев человеческий"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/film_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="Эйч — загадочный и холодный на вид джентльмен, но внутри него пылает жажда справедливости. Преследуя..."
        android:textSize="12sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/film_title"
        app:layout_constraintStart_toStartOf="@+id/film_title"
        app:layout_constraintEnd_toEndOf="@+id/film_poster"
        android:layout_marginTop="10dp"
        android:minLines="6"
        android:maxLines="6"
        android:ellipsize="end"/>

    <ImageView
        android:id="@+id/star_first"
        android:layout_width="14dp"
        android:layout_height="13dp"
        android:src="@drawable/ic_full_star"
        app:layout_constraintStart_toStartOf="@+id/film_description"
        app:layout_constraintTop_toBottomOf="@+id/film_description"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="55dp"/>

    <ImageView
        android:id="@+id/star_second"
        android:layout_width="14dp"
        android:layout_height="13dp"
        android:src="@drawable/ic_full_star"
        app:layout_constraintTop_toTopOf="@+id/star_first"
        app:layout_constraintStart_toEndOf="@+id/star_first" />

    <ImageView
        android:id="@+id/star_third"
        android:layout_width="14dp"
        android:layout_height="13dp"
        android:src="@drawable/ic_full_star"
        app:layout_constraintTop_toTopOf="@+id/star_first"
        app:layout_constraintStart_toEndOf="@+id/star_second"
        android:layout_marginBottom="55dp"/>

    <ImageView
        android:id="@+id/star_fourth"
        android:layout_width="14dp"
        android:layout_height="13dp"
        android:src="@drawable/ic_full_star"
        app:layout_constraintTop_toTopOf="@+id/star_first"
        app:layout_constraintStart_toEndOf="@+id/star_third" />

    <ImageView
        android:id="@+id/star_fifth"
        android:layout_width="14dp"
        android:layout_height="13dp"
        android:src="@drawable/ic_empty_star"
        app:layout_constraintTop_toTopOf="@+id/star_first"
        app:layout_constraintStart_toEndOf="@+id/star_fourth"/>

    <TextView
        android:id="@+id/age_restriction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="18+"
        android:textSize="7sp"
        android:textColor="@color/black"
        android:background="@drawable/border_circle_for_movie_item"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="@id/film_poster"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="52dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>